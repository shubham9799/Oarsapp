<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting started"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/textView28" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timetable/Course Details"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To get the time table and course details you have to login first. After login select time table/course details which will get data from internet and also save it for offline view"
        android:textColor="#000000"
        android:id="@+id/textView29"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="On home page you have buttons that get you timetable and course data in offline mode but it wont work if you have not saved data as explained above "
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advance Course Search"
        android:textColor="#000000"
        android:id="@+id/textView31"
        android:textSize="18dp"
        android:layout_marginTop="7dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For course search,go to course search activity and click update(internet is required). Next add to the database. "
        android:id="@+id/textView30"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        />
        </LinearLayout>
    </ScrollView>

</LinearLayout>