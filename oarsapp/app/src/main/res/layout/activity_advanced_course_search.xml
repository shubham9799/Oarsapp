<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.dell1.materialdesign.advanced_course_search">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/course"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textColorHint="#9e9e9e"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="textEmailAddress"
            android:background="@drawable/editstyle"
            android:textColor="#000000"
            android:capitalize="words"
            android:elevation="4dp"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="search"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/search5"/>


    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Type :-"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button13"
        android:background="#64b5f6"
        android:contentDescription="Select Search Type :"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="100dp">
    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:layout_below="@+id/button11"
        android:onClick="upgrade"
        android:text="Update"
        android:background="#64b5f6"
        android:layout_marginLeft="15dp"
        android:ems="6"
        />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="getData"
        android:text="Show All Data"
        android:layout_gravity="right"
        android:background="#64b5f6"
        android:layout_marginLeft="16dp"
        android:ems="8"/>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If you are opening this for the first time please click update first, it will store course details from internet to your app"
        android:id="@+id/textView24"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="5dp"/>


</LinearLayout>
