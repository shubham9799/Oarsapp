<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="1000dp">


    <RelativeLayout
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dirty"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_bar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:background="#ff5722"
            android:onClick="Timetable"
            android:textColor="#ffffe92a"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="6dp"
            cardview:cardMaxElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4caf50"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"


                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_alarm_on_black_24dp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingLeft="0dp"
                    android:text="TimeTable"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignTop="@+id/card1"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/card1"
            android:layout_toRightOf="@+id/card1"
            android:onClick="Timetable_Calendar"
            android:textColor="#ffffe92a"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="6dp"
            cardview:cardMaxElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2196f3"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/calendaricon"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Save It to Calender"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="13dp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card1"
            android:layout_gravity="center_horizontal"
            android:background="#ff5722"
            android:onClick="Course"
            android:textColor="#ffffe92a"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="6dp"
            cardview:cardMaxElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff5722"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/date_and_time_clock"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:text="Course Details"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignTop="@+id/card3"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/card3"
            android:layout_toRightOf="@+id/card3"
            android:background="#cddc39"
            android:onClick="Calendar_Course"
            android:textColor="#ffffe92a"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="6dp"
            cardview:cardMaxElevation="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:background="#009688"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView

                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/calander"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Save It to Calender"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="13dp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card5"
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card3"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="6dp"
            cardview:cardMaxElevation="4dp"
            android:onClick="del_timetable">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC107">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Delete TimeTable"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card6"
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:layout_alignTop="@+id/card5"
            android:layout_toEndOf="@+id/card5"
            android:layout_toRightOf="@+id/card5"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="6dp"
            cardview:cardMaxElevation="4dp"
            android:onClick="del_course">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#E91E63">

                <ImageView

                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/delete2"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Delete Course Details"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="13dp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>